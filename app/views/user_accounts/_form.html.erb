<%= form_for(@user_account, url: user_accounts_path) do |f| %>
    <% if params[:field] == 'real_name' %>
        Enter your Real name
        <%= f.text_field :real_name %>
    <% else %>
        Enter your Mobile number
        <%= f.text_field :mobile_number %>
    <% end %>
    <%= f.submit 'save', id: 'submit' %>
<% end %>
